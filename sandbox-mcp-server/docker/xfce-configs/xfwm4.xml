<?xml version="1.0" encoding="UTF-8"?>
<!--
XFCE Window Manager (xfwm4) Configuration for VNC/Remote Desktop

Optimized for:
- Compositor DISABLED (critical for VNC performance)
- Click-to-focus behavior
- All animations DISABLED (faster over VNC)
- Edge snapping minimized (less annoying in VNC)
- Minimal window decorations
- Fast tab cycling

Source: docker/xfce-configs/xfwm4.xml
-->
<channel name="xfwm4" version="1.0">
  <!-- CRITICAL: Compositor DISABLED for VNC performance -->
  <property name="use_compositing" type="bool" value="false"/>
  <property name="compositing_mode" type="string" value="none"/>
  <property name="unredirect_overlays" type="bool" value="false"/>

  <!-- Focus Mode: Click-to-focus (better for VNC than sloppy/mouse focus) -->
  <property name="focus_mode" type="string" value="click"/>
  <property name="focus_new" type="bool" value="true"/>
  <property name="raise_on_focus" type="bool" value="false"/>
  <property name="raise_on_click" type="bool" value="true"/>

  <!-- Window Focus Cycling (Alt+Tab) -->
  <property name="cycle_focus_shaded" type="bool" value="false"/>
  <property name="cycle_focus_hidden" type="bool" value="false"/>
  <property name="cycle_minimum" type="bool" value="true"/>
  <property name="cycle_visible" type="bool" value="true"/>
  <property name="cycle_workspaces" type="bool" value="true"/>
  <property name="cycle_cycle" type="bool" value="true"/>
  <property name="cycle_frame" type="bool" value="true"/>

  <!-- Window Placement -->
  <property name="placement_mode" type="string" value="cascade"/>
  <property name="placement_ratio" type="int" value="100"/>
  <property name="placement_aware" type="bool" value="true"/>

  <!-- Window Snapping: Minimal (snap to screen OK, but not windows) -->
  <property name="snap_to_windows" type="bool" value="false"/>
  <property name="snap_to_screen" type="bool" value="true"/>
  <property name="snap_width" type="int" value="10"/>

  <!-- CRITICAL: All animations DISABLED for VNC performance -->
  <property name="box_move" type="bool" value="false"/>
  <property name="box_resize" type="bool" value="false"/>
  <property name="box_window" type="bool" value="false"/>
  <property name="resize_opacity" type="int" value="100"/>

  <!-- Window Decorations: Minimal -->
  <property name="title_font" type="string" value="Sans 10"/>
  <property name="button_layout" type="string" value="O|SHMC"/>
  <property name="borderless_maximize" type="bool" value="false"/>
  <property name="inactive_opacity" type="int" value="100"/>
  <property name="active_opacity" type="int" value="100"/>
  <property name="title_alignment" type="string" value="center"/>

  <!-- Mouse Settings (optimized for VNC latency) -->
  <property name="double_click_distance" type="int" value="5"/>
  <property name="double_click_time" type="int" value="250"/>
  <property name="mousewheel_roll_up" type="string" value="shade"/>
  <property name="mousewheel_roll_down" type="string" value="shade"/>

  <!-- Workspace Settings -->
  <property name="wrap_workspaces" type="bool" value="false"/>
  <property name="wrap_windows" type="bool" value="false"/>

  <!-- Theme: Default (lightweight) -->
  <property name="theme" type="string" value="Default"/>

  <!-- Keyboard Shortcuts -->
  <property name="easy_click" type="string" value="Alt"/>
  <property name="popup_opacity" type="int" value="100"/>

  <!-- Focus Prevention -->
  <property name="prevent_focus_stealing" type="bool" value="false"/>
</channel>
