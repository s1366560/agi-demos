<?xml version="1.0" encoding="UTF-8"?>
<!--
XFCE Panel Configuration for VNC/Remote Desktop

Optimized for:
- Single panel at top (compact 24px for max screen space)
- Application menu (left)
- Task list with flat buttons (VNC-friendly)
- System tray with square icons (16px)
- Clock without seconds (reduces updates)
- Show desktop button
- No transparency/opacity (VNC performance)

Source: docker/xfce-configs/xfce4-panel.xml
-->
<channel name="xfce4-panel" version="1.0">
  <property name="configver" type="int" value="2"/>
  <property name="panels" type="array">
    <value type="int" value="1"/>
    <property name="panel-1" type="empty">
      <!-- Position: Top (p=1) -->
      <property name="position" type="string" value="p=1;x=0;y=0"/>
      <property name="position-locked" type="bool" value="true"/>
      <!-- Compact 24px height for VNC (maximizes screen space) -->
      <property name="size" type="uint" value="24"/>
      <property name="length" type="uint" value="100"/>
      <property name="length-adjust" type="bool" value="true"/>
      <!-- No transparency (better VNC performance) -->
      <property name="background-style" type="uint" value="0"/>
      <property name="background-alpha" type="uint" value="100"/>
      <property name="enter-opacity" type="uint" value="100"/>
      <property name="leave-opacity" type="uint" value="100"/>
      <!-- No autohide (reduces VNC updates) -->
      <property name="autohide" type="bool" value="false"/>
      <property name="disable-struts" type="bool" value="false"/>
      <property name="nrows" type="uint" value="1"/>
      <property name="span-monitors" type="bool" value="false"/>
      <property name="plugin-ids" type="array">
        <value type="int" value="1"/>
        <value type="int" value="2"/>
        <value type="int" value="3"/>
        <value type="int" value="4"/>
        <value type="int" value="5"/>
      </property>
    </property>
  </property>

  <!-- Plugin 1: Whisker Menu (Application Menu) - Left -->
  <property name="plugins" type="array">
    <value type="string" value="whiskermenu"/>
    <property name="plugin-1" type="empty">
      <property name="plugin-id" type="int" value="1"/>
      <property name="button-icon" type="string" value="xfce4-whiskermenu-plugin"/>
      <property name="button-title" type="string" value="Applications"/>
      <property name="show-category-names" type="bool" value="true"/>
      <property name="show-application-icons" type="bool" value="true"/>
      <property name="recent-items" type="uint" value="10"/>
      <property name="favorites-in-recent" type="bool" value="true"/>
      <property name="icon-size" type="uint" value="16"/>
    </property>

    <!-- Plugin 2: Task List (Window List) - Center -->
    <property name="plugin-2" type="empty">
      <property name="plugin-id" type="int" value="2"/>
      <!-- No handle (cleaner look) -->
      <property name="show-handle" type="bool" value="false"/>
      <!-- Show labels (better usability in VNC) -->
      <property name="show-labels" type="bool" value="true"/>
      <!-- Flat buttons (less VNC bandwidth) -->
      <property name="flat-buttons" type="bool" value="true"/>
      <property name="switch-workspace-on-unminimize" type="bool" value="false"/>
      <!-- Middle-click to close -->
      <property name="middle-click" type="uint" value="1"/>
      <!-- Window scrolling (Alt+scroll) -->
      <property name="window-scrolling" type="bool" value="true"/>
    </property>

    <!-- Plugin 3: System Tray - Right -->
    <property name="plugin-3" type="empty">
      <property name="plugin-id" type="int" value="3"/>
      <!-- No frame (cleaner) -->
      <property name="show-frame" type="bool" value="false"/>
      <!-- Square icons (uniform look, less bandwidth) -->
      <property name="square-icons" type="bool" value="true"/>
      <!-- Small 16px icons (VNC-friendly) -->
      <property name="icon-size" type="int" value="16"/>
      <property name="known-legacy-items" type="array">
      </property>
    </property>

    <!-- Plugin 4: Clock - Right -->
    <property name="plugin-4" type="empty">
      <property name="plugin-id" type="int" value="4"/>
      <!-- Digital mode (compact) -->
      <property name="mode" type="uint" value="2"/>
      <property name="timezone" type="string" value="UTC"/>
      <!-- No seconds (reduces VNC updates) -->
      <property name="show-seconds" type="bool" value="false"/>
      <!-- 24-hour format (military time) -->
      <property name="show-military" type="bool" value="true"/>
      <!-- No frame (cleaner) -->
      <property name="show-frame" type="bool" value="false"/>
      <!-- Compact format: YYYY-MM-DD HH:MM -->
      <property name="digital-format" type="string" value="%Y-%m-%d %H:%M"/>
    </property>

    <!-- Plugin 5: Show Desktop Button - Right -->
    <property name="plugin-5" type="empty">
      <property name="plugin-id" type="int" value="5"/>
      <!-- No frame (cleaner) -->
      <property name="show-frame" type="bool" value="false"/>
    </property>
  </property>
</channel>
